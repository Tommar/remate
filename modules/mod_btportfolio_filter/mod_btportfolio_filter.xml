<?xml version="1.0" encoding="iso-8859-1"?><extension  type="module" version="2.5.0" client="site" method="upgrade">    <name>BT Portfolio Filter</name>    <author>BowThemes</author>    <creationDate>November 2012</creationDate>    <copyright>Copyright (C) 2012 Bowthemes. All rights reserved.</copyright>    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>    <authorEmail>support@bowthemes.com</authorEmail>    <authorUrl>http://www.bowthemes.com</authorUrl>    <version>1.0.1</version>    <description>	<![CDATA[		<div class="bt_description">			<h3>BT Portfolio Filter Module Version 1.0.1</h3>						<a href="http://bowthemes.com" target="_blank"><img src="../modules/mod_btportfolio_filter/admin/images/bt-filter.png"></a>			<p>BT Portfolio Filter modude is an amazing module to search and filter portfolio . It also allows to create filters for user with content of those from back-end, and  fully configure  with many options. </p>			<br clear="both" />			<h3>Features</h3>			<ul class="list-style">				<li>Search portfolio of component Portfolio</li>				<li>Support for search keyword based on title, content</li>				<li>Support for search by extra field</li>				<li>Compatibility with Joomla 1.6 Joomla 1.7 & Joomla 2.5</li>				<li>Cross Browser Support: IE7+, Firefox 2+, Safari 3+, Chrome 8+, Opera 9+</li>			</ul>			<h3>Upgrade versions</h3>			<p>				Your current versions is 1.0.1 <a target="_blank" href="http://bowthemes.com/">Find our latest versions now</a>			</p>						<h3>About bow themes & copyright</h3>				<p>				Bow Themes is Professional Joomla template provider. We are focused on creating unique, attractive and clean templates without loosing flexibility and simplicity of customization			</p>			Copyright (C) 2013 BowThemes			</div>		<style>			.bt_description h3{				text-transform: uppercase;				margin: 20px 0px 10px 0px;			}			.bt_description img{				float:left;				margin:5px 5px 5px 0px;			}			.bt_description p,.bt_description li{				list-style: none outside none;				padding: 5px 5px 5px 20px;							}						.bt_description ul.list-style li{				background:url(../modules/mod_btportfolio_filter/admin/images/tick.png) 0px 6px no-repeat;				padding-left:30px;				line-height:15px;			}		</style>	]]>	    </description>    <files>        <filename module="mod_btportfolio_filter">mod_btportfolio_filter.php</filename>        <filename>index.html</filename>                <folder>helpers</folder>        <folder>assets</folder>        <folder>tmpl</folder>        <folder>admin</folder>    </files>    <languages>        <language tag="en-GB">en-GB.mod_btportfolio_filter.ini</language>    </languages>	<config>		<fields name="params">			<fieldset name="basic" label="MOD_BTPORTFOLIO_FILTER_SETTING_LABEL" addfieldpath="/modules/mod_btportfolio_filter/admin/formfield">									<field name="moduleclass_sfx" type="text"  default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" /> 				<field name="showsearchbox" type="radio" default="0" class="btn-group bt_control"  label="MOD_BTPORTFOLIO_FILTER_SHOWTEXT_LABEL" description="MOD_BTPORTFOLIO_FILTER_SHOWTEXT_DESC" >					<option value="1">JYES</option>					<option value="0">JNO</option>				</field>				<field name="keysearch" type="text" class="showsearchbox_1" default="Search..." label="MOD_BTPORTFOLIO_FILTER_KEYSEARCH_LABEL" description="MOD_BTPORTFOLIO_FILTER_KEYSEARCH_DESC"/>				<field name="buttontext" type="text" class="button_1" default="Search" label="MOD_BTPORTFOLIO_FILTER_BUTTONTEXT_LABEL" description="MOD_BTPORTFOLIO_FILTER_BUTTONTEXT_DESC"/>				<field name="itemid" type="menuitem" description="MOD_BTPORTFOLIO_SELECTED_ITEMID_DESC"	label="MOD_BTPORTFOLIO_SELECTED_ITEMID_LABEL">					<option>JNONE</option>				</field>				<field name="descr" type="editor" rows="10" cols="40" filter="raw" default ="" label="MOD_BTPORTFOLIO_FILTER_FORM_LABEL" description="MOD_BTPORTFOLIO_FILTER_FORM_DESC"/>								</fieldset>			<fieldset name="portfolio" label="MOD_BTPORTFOLIO_FILTER_CONFIG">									<field name="showcategory" type="radio" default="0" class="btn-group bt_control"  label="MOD_BTPORTFOLIO_FILTER_SHOWCATEGORY_LABEL" description="MOD_BTPORTFOLIO_FILTER_SHOWCATEGORY_DESC" >					<option value="1">JYES</option>					<option value="0">JNO</option>				</field>				<field name="extrafield" type="extrafieldlist" label="MOD_BTPORTFOLIO_FILTER_EXTRAFIELD_LABEL" description="MOD_BTPORTFOLIO_FILTER_EXTRAFIELD_DESC"/>				<field name="method" type="list" default="AND" label="MOD_BTPORTFOLIO_FILTER_METHOD_LABEL" description="MOD_BTPORTFOLIO_FILTER_METHOD_DESC">					<option value="AND">AND</option>					<option value="OR">OR</option>									</field>				<field type="asset" name="asset" addfieldpath="/modules/mod_btportfolio_filter/admin/formfield"  path="modules/mod_btportfolio_filter/admin/" />							</fieldset> 						<fieldset name ="advanced" label="MOD_BTPORTFOLIO_FILTER_ADVANCED_LABEL">				<field name="cache" type = "list" default="1" size="10" label="MOD_BTPORTFOLIO_FILTER_CACHING_LABEL" description= "MOD_BTPORTFOLIO_FILTER_CACHING_DESC">                    <option value="1">JGLOBAL_USE_GLOBAL</option>                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>                </field>                <field  name="cache_time" type="text" default="900" label="MOD_BTPORTFOLIO_FILTER_CACHE_TIME_LABEL" description="MOD_BTPORTFOLIO_FILTER_CACHE_TIME_DESC" />			</fieldset>					</fields>		</config></extension>